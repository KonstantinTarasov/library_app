<div class="row">
  <div class="col-8 offset-2">
    <div class="text-center">
      <h3>Изменить информацию о книги</h3>
    </div>
    <%= simple_form_for @book do |f| %>
      <%= f.input :title %>
      <%= f.input :description %>
      <%= f.input :image %>
      <%= f.input :year %>
      <%= f.input :author %>
      <%= f.button :submit, class: 'btn btn-success' %>
      <%= f.button :submit, 'Delete Book', data: {confirm: ('Are you sure?')},
            method: :delete, class: "btn btn-mini btn-danger" %>
    <% end %>
  </div>
</div>
