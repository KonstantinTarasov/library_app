<div class="text-center">

  <h1>Книги</h1>

  <% @books.each do |book| %>
    <div>
        <p><%= link_to book.title, book_path(book) %></p>
        <p>Автор <%= book.author %></p>
    </div>
  <% end %>

  <div class="buffer-both">
    <%= link_to 'Добавить книгу', new_book_path, class: 'btn btn-success' %>
  </div>
</div>
